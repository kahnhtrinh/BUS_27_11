
@{
    ViewBag.Title = "TicketDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<!-- Header Start -->
<div class="container-fluid header bg-white p-0">
    <div class="row g-0 align-items-center flex-column-reverse flex-md-row">
        <div class="col-md-6 p-5 mt-lg-5">
        </div>
    </div>
</div>
<div class="container mt-5">
    <!-- Card chứa thông tin tra cứu vé -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 style="color: white">Thông tin vé</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Mã vé:</strong> <span id="ticketCodeResult">123456</span>
                    </div>
                    <div class="mb-3">
                        <strong>Tuyến xe:</strong> <span id="routeResult">Hà Nội - Sài Gòn</span>
                    </div>
                    <div class="mb-3">
                        <strong>Chuyến xe:</strong> <span id="tripResult">06:00 - 18:00</span>
                    </div>
                    <div class="mb-3">
                        <strong>Số ghế đã đặt:</strong> <span id="seatResult">A01, A02</span>
                    </div>
                    <div class="mb-3">
                        <strong>Tên khách hàng:</strong> <span id="nameResult">Nguyễn Văn A</span>
                    </div>
                    <div class="mb-3">
                        <strong>Email:</strong> <span id="emailResult">nguyenvana@example.com</span>
                    </div>
                    <div class="mb-3">
                        <strong>Số điện thoại:</strong> <span id="phoneResult">0987654321</span>
                    </div>
                    <div class="mb-3">
                        <strong>Trạng thái thanh toán:</strong>
                        <span id="statusResult" class="badge bg-success">Đã thanh toán</span>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Lookup", "Lookup")" class="btn btn-secondary">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>